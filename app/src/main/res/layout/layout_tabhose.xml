<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.dodoiot.lockapp.view.SlidingTabLayout
        android:id="@+id/slidinglayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        tl:tl_indicator_color="@color/titleback"
        tl:tl_textSelectColor="@color/threecolor"
        tl:tl_textUnselectColor="@color/threecolor"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_indicator_style="NORMAL"
        tl:tl_tab_space_equal="true"
        ></com.dodoiot.lockapp.view.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
