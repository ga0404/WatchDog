<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/height50layout_style"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_70"
    android:id="@+id/lockitemlayout"
    android:background="@drawable/setlayout_background">


    <com.dodoiot.lockapp.view.CircleImageView
        android:id="@+id/lockimage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@mipmap/znsicon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/lockimage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/lockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_16sp"
            android:textColor="@color/threecolor"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/lockpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/silver"
            android:layout_toLeftOf="@+id/next"
            android:textSize="@dimen/dp_14sp"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:text="100%"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/next"
        style="@style/next_back_style"
        android:visibility="gone"
        />


</RelativeLayout>

